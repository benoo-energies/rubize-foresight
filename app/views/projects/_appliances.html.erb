<h4 class="my-4 py-1">Setup of appliances</h4>

<div id="appliance_container">
  <% if uses.present? %>
    <% uses.each do |use| %>
      <%= render 'use_section', use: use, project_appliances: project_appliances, appliances: appliances %>
    <% end %>

  <% else %>
    <div class="text-secondary small my-3"><em>
      No appliances recorded for this project.
    </em></div>
  <% end %>
</div>

<div class="d-flex mt-4 pt-3">
  <%= render 'button_catalog', project: project %>
</div>

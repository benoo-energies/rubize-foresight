<h4 class="my-4 py-1">Setup of appliances</h4>

<div id="appliance_container">
  <% if uses.present? %>
    <% uses.each do |use| %>
      <%= render 'projects/use_section', use: use, use_project_appliances: project_appliances.joins(:appliance).where(appliances: {use_id: use.id}) %>
    <% end %>

  <% else %>
    <div class="text-secondary small my-3"><em>
      No appliances recorded for this project.
    </em></div>
  <% end %>
</div>

<div class="d-flex mt-4 pt-3">
  <%= render 'project_appliances/button_index', project: project %>
</div>

<% if project.price_max.present? %>
  <div class="badge px-2 mr-2 badge-dark">
    <i class="fas fa-plug fa-fw mr-1"></i>
    <%= "#{project.price_min.format(no_cents: true, symbol: false, thousands_separator: " ")} -" if project.price_min != project.price_max %>
    <%= "#{project.price_max.format(no_cents: true, symbol: false, thousands_separator: " ")} #{project.price_max.currency.symbol}" %>
  </div>
<% end %>

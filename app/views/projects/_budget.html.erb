<table class="table table-sm">
  <tbody>
    <tr class="bg-dark text-white">
      <th scope="row" class="pl-sm-2">
        Appliances
      </th>
      <td class="text-right font-weight-bold text-nowrap">
        <%= render 'shared/price_range', price_min: project.price_min, price_max: project.price_max %>
      </td>
    </tr>
    <% project.uses.each do |use| %>
      <tr>
        <th scope="row" class="font-weight-normal pl-sm-4">
          <%= use.name %>
        </th>
        <td class="text-right text-nowrap">
          <%= render 'shared/price_range', price_min: use.price_min(project), price_max: use.price_max(project) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% unless project.all_prices? %>
  <div class="text-warning mt-2 mb-3 small">
    <i class="fas fa-exclamation-triangle mr-1"></i>
    Price information is missing in appliance setup.
  </div>
<% end %>

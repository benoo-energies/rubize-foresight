function addProjectCard(parentProjectId, cardHTML) {
  const parentProjectCard = document.querySelector(`[data-project-id='${parentProjectId}']`);
  const projectList = parentProjectCard.parentNode;
  let newDiv = document.createElement("div");
  newDiv.innerHTML = cardHTML;
  let newProjectCard = newDiv.firstChild;
  newProjectCard.classList.add("bg-light");
  projectList.insertBefore(newProjectCard, parentProjectCard);
}

addProjectCard("<%= @parent_project.id%>", "<%= j render 'projects/card', project: @project %>");


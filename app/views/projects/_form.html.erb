<%= simple_form_for(project) do |f| %>
  <%= f.error_notification %>

  <div class="border-bottom border-tertiary pb-2 mb-4" >
    <h5 class="mb-3">General information</h5>
    <%= f.input :name, placeholder: "Kiosk Benoo Energies KM001" %>
    <div class="row">
      <div class="col-12 col-sm-6">
        <%= f.input :country_code, label: "Country", selected: "FR" %>
      </div>
      <div class="col-12 col-sm-6">
        <%= f.input :city, placeholder: "Bordeaux" %>
      </div>
    </div>
    <%= f.input :description, placeholder: "Benoo Energies standard kiosk ...", input_html: { rows: "5" }, include_blank: false %>
    <div class="row">
      <div class="col-sm-6">
        <%= f.input :day_time, selected: "6:00".to_time, label: "Sunrise" %>
      </div>
      <div class="col-sm-6">
        <%= f.input :night_time, selected: "18:00".to_time, label: "Sunset" %>
      </div>
    </div>
  </div>

  <div>
    <h5 class="mb-4">Load features</h5>
    <div class="row">
      <div class="col-12 col-sm-6">
        <h6>Current type</h6>
        <div class="d-flex">
          <div>
            <%= f.input :current_ac, label: "AC", label_html: {class: "mr-3"} %>
          </div>
          <div>
            <%= f.input :current_dc, label: "DC", label_html: {class: "mr-3"} %>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <h6>Frequency <small class="pl-2">(if AC current)</small></h6>
        <%= f.input :frequency, as: :radio_buttons, collection: Project::FREQUENCIES, wrapper: :horizontal_collection_inline, label: false, include_blank: false %>
      </div>
    </div>
    <h6>Voltage range (V)</h6>
    <div class="row">
      <div class="col">
        <%= f.input :voltage_min, wrapper: :horizontal_form, label: "min", placeholder: "200" %>
      </div>
      <div class="col">
        <%= f.input :voltage_max, wrapper: :horizontal_form, label: "max", placeholder: "230" %>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-end mt-3">
    <%= link_to "Cancel", :back, class: "btn btn-outline-secondary mr-2" %>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

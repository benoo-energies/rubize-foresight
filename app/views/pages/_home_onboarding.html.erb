<div class="d-flex flex-wrap py-4">
  <%= link_to "Log in", new_user_session_path, class: "btn btn-primary mb-2 mr-3" %>
  <button type="button" class="btn btn-outline-secondary mb-2" data-toggle="modal" data-target="#onboarding">
    Request beta test
  </button>

<div class="container">
  <div class="row justify-content-center my-5">
    <div class="col col-xl-10">

      <div class="mb-3">
        <%= link_to appliances_path do %>
          <i class="fas fa-arrow-left mr-1"></i>
          Back to catalogue
        <% end %>
      </div>

      <div class="d-lg-flex justify-content-between mb-4">
        <div class="mr-lg-5">
          <h2 class=""><%= @appliance.name %></h2>
          <h5 class="mb-3 text-secondary"><%= @use.name %></h5>
          <p><%= sanitize auto_link(markdown_to_html(@appliance.description)) %></p>
        </div>
        <div class="flex-shrink-0">
          <div>
            <%= link_to edit_appliance_path(@appliance), class: "btn btn-primary mr-3" do %>
              <i class="fas fa-edit mr-1"></i>
              Edit
            <% end %>
            <%= link_to appliance_path(@appliance), method: :delete, data: {confirm: 'Are you certain you want to delete this appliance?'}, class: "btn btn-outline-danger" do %>
              <i class="fas fa-trash-alt mr-1"></i>
              Delete
            <% end %>
          </div>
        </div>
      </div>

      <div class="d-lg-flex mb-3">
        <div class="flex-shrink-0 mr-lg-5 mb-4 text-center">
          <%= render 'image', appliance: @appliance, size: 300 %>
        </div>
        <div class="w-100">
          <%= render 'features', appliance: @appliance %>
        </div>
      </div>

      <div class="d-flex py-4 mb-4 justify-content-center border-top border-bottom border-tertiary">
        <%= render 'shared/load_chart', electrical_load: @appliance, title: "Daily load profile (default)", day: Appliance::DAY_TIME, night: Appliance::NIGHT_TIME %>
      </div>

      <h3 class="my-4 py-1">Sourcing</h3>

      <% if @sources.present? %>
        <div class="list-group">
          <% @sources.each do |source| %>
            <%= render 'source_list_item', source: source %>
          <% end %>
        </div>
      <% else %>
        <div class="text-secondary small">
          No sources recorded for this appliance yet.
          <%= link_to "Add a new one", new_appliance_source_path(@appliance) %>.
        </div>
      <% end %>

      <div class="d-flex mt-3 pt-3">
        <%= link_to new_appliance_source_path(@appliance), class: "btn btn-outline-secondary flex-grow-1" do %>
          <i class="fas fa-plus mr-1"></i>
          New source
        <% end %>
      </div>

    </div>
  </div>
</div>

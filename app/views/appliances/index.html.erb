<div class="container">
  <div class="row justify-content-center my-5">
    <div class="col col-xl-10">

      <div class="mb-3">
        <%= link_to root_path do %>
          <i class="fas fa-arrow-left mr-1"></i>
          Back to home
        <% end %>
      </div>

      <h2 class="mb-3">Appliance catalog</h2>

      <div class="d-md-flex justify-content-between align-items-center">
        <div class="flex-grow-1 d-flex align-items-center mr-md-5 mt-4 mb-2">
          <%= form_tag appliances_path, method: :get, remote: true, class: "flex-grow-1 d-flex" do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Search an appliance"
            %>
            <%= button_tag class: "btn btn-primary ml-3" do %>
              <i class="fas fa-search"></i>
            <% end %>
          <% end %>
          <div class="mr-md-5">
            <%= link_to "Clear", appliances_path, remote: true, class: "btn btn-link btn-sm ml-md-3 mr-md-5" %>
          </div>
        </div>

        <div class="d-flex ml-lg-5 mt-4 mb-2">
          <%= link_to new_appliance_path, class: "btn btn-primary ml-lg-5 flex-grow-1" do %>
            <i class="fas fa-plus mr-1"></i>
            New appliance
          <% end %>
        </div>
      </div>

      <div id="results">
        <%= render 'results', uses: @uses, query: @query %>
      </div>

      <div class="d-flex mt-4 pt-3">
        <%= link_to new_use_path, class: "btn btn-outline-secondary flex-grow-1" do %>
          <i class="fas fa-plus mr-1"></i>
          New use
        <% end %>
      </div>

    </div>
  </div>
</div>

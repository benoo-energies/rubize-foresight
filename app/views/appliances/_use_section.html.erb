<div data-use-id="<%= use.id %>">

  <div class="d-sm-flex justify-content-between align-items-center mt-4 mb-3 pt-2">
    <div class="d-flex mr-lg-5">
      <h5><%= use.name %></h5>
      <%= link_to edit_use_path(use), class: "ml-3" do %>
        <i class="fas fa-edit"></i>
      <% end %>
      <% if use.appliances.blank? %>
        <%= link_to use_path(use), method: :delete, remote: true, data: {confirm: 'Are you certain you want to delete this use?'}, class: "text-danger ml-3" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      <% end %>
    </div>
    <div>
      <%= link_to new_appliance_path(appliance: {use_id: use.id}), class: "btn btn-primary btn-sm my-2" do %>
        <i class="fas fa-plus mr-1"></i>
        <%= "New #{use.name} app" %>
      <% end %>
    </div>
  </div>

  <% if use.appliances.present? %>
    <div class="list-group">
      <% use.appliances.ordered.each do |appliance| %>
        <%= render 'list_item', appliance: appliance %>
      <% end %>
    </div>
  <% else %>
    <div class="text-secondary small">
      No appliance recorded for this use yet.
    </div>
  <% end %>

</div>

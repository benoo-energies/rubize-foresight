function addApplianceCard(parentApplianceId, cardHTML) {
  const parentApplianceCard = document.querySelector(`[data-appliance-id='${parentApplianceId}']`);
  const applianceList = parentApplianceCard.parentNode;
  let newDiv = document.createElement("div");
  newDiv.innerHTML = cardHTML;
  let newApplianceCard = newDiv.firstChild;
  newApplianceCard.classList.add("bg-light");
  applianceList.insertBefore(newApplianceCard, parentApplianceCard);
}

addApplianceCard("<%= @parent_appliance.id %>", "<%= j render 'appliances/card', appliance: @appliance %>");


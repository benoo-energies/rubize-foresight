<div class="w-100 chart-container">
  <div class="d-flex justify-content-center align-items-center mb-3">
    <div class="text-center font-weight-bold mr-3">
      Default load profile
    </div>
    <div class="d-flex justify-content-center">
      <div class="text-warning border border-warning font-weight-bold rounded px-3 py-2">
        <%= "#{@appliance.daily_consumption} kWh/day" %>
      </div>
    </div>
  </div>
  <div class="d-flex chart-plot">
    <% (0..23).each do |i| %>
      <div class="d-flex flex-column-reverse w-100">
        <div class="text-center mt-1">
          <small class="font-weight-bold"><%= i %></small>
        </div>
        <% j = appliance.method("hourly_rate_#{i}").call.to_i %>
        <div data-toggle="tooltip" title="<%= appliance.method("hourly_consumption_#{i}").call %> kWh" data-placement="top" class="chart-bar-full w-100" style="height: <%= "#{ j * 10 }%" %>"></div>
        <div class="chart-bar-empty w-100" style="height: <%= "#{ (10 - j) * 10 }%" %>"></div>
      </div>
    <% end %>
  </div>
</div>

<h3 class="mb-4">New account</h3>

<p class="text-secondary">
  An email will be sent to the account owner after creation.
</p>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name,
                  required: true,
                  autofocus: true %>
    <%= f.input :email,
                required: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                as: :hidden,
                required: true,
                input_html: { autocomplete: "new-password", value: Devise.friendly_token.first(8) } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "New account",class: "btn btn-primary btn-block mb-3 mt-4" %>
  </div>
<% end %>

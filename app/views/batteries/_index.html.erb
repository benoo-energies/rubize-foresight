<div id="battery_container">
  <% if batteries.present? %>

    <% Battery::TECHNOLOGIES.each do |technology| %>
      <% if batteries.where(technology: technology).present? %>
        <h6 class="pb-2"><%= technology %></h6>
        <div class="list-group pb-4">
          <% batteries.where(technology: technology).each do |battery| %>
        <%= render 'batteries/card', battery: battery %>
      <% end %>
        </div>
      <% end %>
    <% end %>

  <% else %>
    <%= render 'batteries/no_battery' %>
  <% end %>
</div>

<div class="d-flex mt-3 pt-3">
  <%= render 'batteries/button_new' %>
</div>

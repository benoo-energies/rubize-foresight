<%= simple_form_for(battery) do |f| %>
  <%= f.error_notification %>

  <%= f.input :technology, collection: Battery::TECHNOLOGIES %>

  <div class="row">
    <div class="col-12 col-sm-6">
      <%= f.input :voltage,
        as: :select,
        label: 'Voltage (V)',
        collection: Battery::VOLTAGES
      %>
    </div>
    <div class="col-12 col-sm-6">
      <%= f.input :capacity,
        label: 'Capacity (Ah)',
        placeholder: "100"
      %>
    </div>
    <div class="col-12 col-sm-6">
      <%= f.input :dod,
        label: 'DOD (%)',
        placeholder: "80"
      %>
    </div>
    <div class="col-12 col-sm-6">
      <%= f.input :efficiency,
        label: 'Efficiency (%)',
        placeholder: "90"
      %>
    </div>
  </div>

  <h5 class="mt-3">Price range (excl. tax)</h5>
  <p class="text-secondary small"><em>Include wiring and mounting equipment costs (per battery).</em></p>
  <div class="row">
    <div class="col-12 col-sm-4">
      <%= f.input :price_min,
        as: :numeric,
        placeholder: "100",
        label: "Min"
      %>
    </div>
    <div class="col-12 col-sm-4">
      <%= f.input :price_max,
        as: :numeric,
        placeholder: "150",
        label: "Max"
      %>
    </div>
    <div class="col-12 col-sm-4">
      <%= f.input :currency,
        as: :select,
        collection: Money::Currency.all
      %>
    </div>
  </div>

  <div class="d-flex justify-content-end mt-3">
    <%= link_to "Cancel", power_components_path, class: "btn btn-outline-secondary mr-2" %>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

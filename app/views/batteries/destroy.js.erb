function hideBatteryCard(batteryId) {
  const batteryCard = document.querySelector(`[data-battery-id='${batteryId}']`);
  batteryCard.classList.add("d-none");
  batteryCard.classList.remove("d-flex");
}

function showNoBatteryMessage(messageHTML) {
  const batteryContainer = document.getElementById('battery_container');
  batteryContainer.insertAdjacentHTML('beforeend', messageHTML);
}

hideBatteryCard("<%= @battery.id %>");
<% if @batteries.blank? %>
  showNoBatteryMessage("<%= j render 'batteries/no_battery' %>");
<% end %>

<% if policy(battery).destroy? %>
  <%= link_to battery_path(battery), method: :delete, remote: true, data: {confirm: 'Are you certain you want to delete this battery?', toggle: "tooltip"}, class: "text-danger my-1 ml-3 mr-sm-2", title:"Delete battery" do %>
    <i class="fas fa-trash-alt"></i>
  <% end %>
<% end %>

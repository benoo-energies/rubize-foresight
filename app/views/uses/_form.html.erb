<%= simple_form_for(use) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, placeholder: "Freezing" %>
  <div class="mt-4 d-flex justify-content-end">
    <%= link_to "Cancel", :back, class: "btn btn-outline-secondary mr-2" %>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

<div class="bg-light rounded border border-secondary mt-5 p-3">
  <h6 class="text-secondary mt-2 mb-3">
    <i class="fas fa-info-circle mr-2"></i>
    Existing uses
  </h6>
  <% uses.each do |use| %>
    <div class="badge badge-secondary p-2 mr-2">
      <%= use.name %>
    </div>
  <% end %>
</div>

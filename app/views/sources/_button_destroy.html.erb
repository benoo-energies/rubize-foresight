<% if policy(source).destroy? %>
  <%= link_to source_path(source), method: :delete, remote: true, data: {confirm: 'Are you certain you want to delete this source?', toggle: "tooltip"}, class: "text-danger my-1 ml-3 mr-sm-2", title:"Delete source" do %>
    <i class="fas fa-trash-alt"></i>
  <% end %>
<% end %>

<div class="list-group-item d-flex justify-content-between align-items-center" data-source-id="<%= source.id %>">

  <div>
    <h6>
      <span class="mr-2"><%= source.supplier %></span>
      <span class="text-secondary mr-2">
        <%= "#{source.city}, #{source.country_name}" %>
      </span>
      <%= render 'sources/badge_date', source: source %>
    </h6>
    <p class="small mb-1">
      <%= source.details %>
    </p>
    <div class="mb-2">
      <%= render 'sources/badge_price_currency', source: source %>
      <%= render 'sources/badge_price_eur', source: source %>
    </div>
  </div>

  <div class="flex-shrink-0">
    <%= render 'sources/button_edit', source: source %>
    <%= render 'sources/button_destroy', source: source %>
  </div>

</div>

function showNoSourceMessage(messageHTML) {
  const sourceContainer = document.getElementById('source_container');
  sourceContainer.innerHTML = (messageHTML);
}

document.querySelector("[data-source-id='<%= @source.id %>']").style.display = 'none';

<% if @appliance.sources.blank? %>
  showNoSourceMessage("<%= j render 'sources/no_source', appliance: @appliance %>");
<% end %>

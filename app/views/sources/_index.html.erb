<h4 class="my-4 py-1">Sourcing references</h4>

<div id="source_container">
  <% if sources.present? %>
    <div class="list-group">
      <% sources.each do |source| %>
        <%= render 'sources/index_show', source: source %>
      <% end %>
    </div>
  <% else %>
    <%= render 'sources/index_empty', appliance: appliance %>
  <% end %>
</div>

<div class="d-flex mt-3 pt-3">
  <%= render 'sources/button_new', appliance: appliance %>
</div>

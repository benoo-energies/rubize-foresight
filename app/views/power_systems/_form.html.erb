<%= simple_form_for(power_system) do |f| %>
  <%= f.error_notification %>

  <div class="border-bottom border-tertiary pb-2 mb-4">
    <%= f.input :name, placeholder: "Freezer 400L Benoo Energies" %>
    <%= f.input :description, placeholder: "MPPT : VICTRON 150/70, Onduleur : VICTRON Phoenix 24/800, ...", input_html: { rows: "5" }, include_blank: false %>
    <%= f.input :communication, as: :radio_buttons, wrapper: :horizontal_collection_inline, label: "Remote monitoring?", label_html: { class: "text-nowrap" } %>
  </div>

  <div class="border-bottom border-tertiary pb-2 mb-4">
    <h5 class="mb-3">Input features</h5>
    <div class="row">
      <div class="col-12 col-sm-4">
        <%= f.input :charge_current, label: "Charge current (A)", placeholder: "15" %>
      </div>
      <div class="col-12 col-sm-8">
        <h6>Charge voltage</h6>
        <div class="d-flex">
          <div>
            <%= f.input :voltage_12, label: "12 V", label_html: {class: "mr-3"} %>
          </div>
          <div>
            <%= f.input :voltage_24, label: "24 V", label_html: {class: "mr-3"} %>
          </div>
          <div>
            <%= f.input :voltage_36, label: "36 V", label_html: {class: "mr-3"} %>
          </div>
          <div>
            <%= f.input :voltage_48, label: "48 V", label_html: {class: "mr-3"} %>
          </div>
        </div>
      </div>
    </div>

    <h5 class="mb-3 mt-2">Output features</h5>
    <%= f.input :inverter, as: :radio_buttons, wrapper: :horizontal_collection_inline, label: "DC/AC Inverter?", label_html: { class: "text-nowrap" } %>
    <%= f.input :power_out, label: "Max power (VA)", placeholder: "1500", wrapper: :horizontal_form %>
    <h6>Voltage range (V)</h6>
    <div class="row">
      <div class="col">
        <%= f.input :voltage_out_min, wrapper: :horizontal_form, label: "min", placeholder: "200" %>
      </div>
      <div class="col">
        <%= f.input :voltage_out_max, wrapper: :horizontal_form, label: "max", placeholder: "230" %>
      </div>
    </div>

  </div>

  <h5 class="mb-3 mt-2">Price</h5>
  <div class="row">
    <div class="col-12 col-sm-6">
      <%= f.input :price, as: :numeric, placeholder: "42,50", label: "Unit price (excl. tax)" %>
    </div>
    <div class="col-12 col-sm-6">
      <%= f.input :currency, as: :select, collection: Money::Currency.all %>
    </div>
  </div>

  <div class="d-flex justify-content-end mt-3">
    <%= link_to "Cancel", power_components_path, class: "btn btn-outline-secondary mr-2" %>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

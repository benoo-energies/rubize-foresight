function hidePowerSystemCard(powerSystemId) {
  const powerSystemCard = document.querySelector(`[data-power-system-id='${powerSystemId}']`);
  powerSystemCard.classList.add("d-none");
  powerSystemCard.classList.remove("d-flex");
}

function showNoPowerSystemMessage(messageHTML) {
  const powerSystemContainer = document.getElementById('power_system_container');
  powerSystemContainer.insertAdjacentHTML('beforeend', messageHTML);
}

hidePowerSystemCard("<%= @power_system.id %>");
<% if @power_systems.blank? %>
  showNoPowerSystemMessage("<%= j render 'power_systems/no_power_system' %>");
<% end %>

<div id="power_system_container">
  <% if power_systems.present? %>

    <h6 class="pb-2">DC systems</h6>
    <div class="list-group pb-4">
      <% power_systems.where.not(ac_out: true).each do |power_system| %>
        <%= render 'power_systems/card', power_system: power_system %>
      <% end %>
    </div>

    <h6 class="pb-2">AC systems</h6>
    <div class="list-group">
      <% power_systems.where(ac_out: true).each do |power_system| %>
        <%= render 'power_systems/card', power_system: power_system %>
      <% end %>
    </div>

  <% else %>
    <%= render 'power_systems/no_power_system' %>
  <% end %>
</div>

<div class="d-flex mt-3 pt-3">
  <%= render 'power_systems/button_new' %>
</div>

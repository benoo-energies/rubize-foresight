<div class="list-group-item d-flex justify-content-between align-items-center" data-power-system-id="<%= power_system.id %>">

  <div>
    <h6>
      <span class="mr-2"><%= power_system.name %></span>
      <%= render 'power_systems/badge_inverter', power_system: power_system %>
      <%= render 'power_systems/badge_communication', power_system: power_system %>
    </h6>
    <p class="small mb-1">
      <%= power_system.description %>
    </p>
    <div class="mb-2">
      <%= render 'power_systems/badge_input', power_system: power_system %>
      <%= render 'power_systems/badge_output', power_system: power_system %>
      <%= render 'power_systems/badge_price_currency', power_system: power_system %>
      <%= render 'power_systems/badge_price_eur', power_system: power_system %>
    </div>
  </div>

  <div class="flex-shrink-0">
    <%= render 'power_systems/button_edit', power_system: power_system %>
    <%= render 'power_systems/button_destroy', power_system: power_system %>
  </div>

</div>

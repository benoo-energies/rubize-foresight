function showNoProjectApplianceMessage(messageHTML) {
  const projectApplianceContainer = document.getElementById('project_appliance_container');
  projectApplianceContainer.innerHTML = (messageHTML);
}

function updateLoadChart(loadChartHTML) {
  const loadChartContainer = document.getElementById('load_chart_container');
  loadChartContainer.innerHTML = (loadChartHTML);
  $('[data-toggle="tooltip"]').tooltip();
}

function updateProjectFeatures(featuresHTML) {
  const projectFeaturesContainer = document.getElementById('project_features_container');
  projectFeaturesContainer.innerHTML = (featuresHTML);
}

function updatePowerComponents(componentsHTML) {
  const powerComponentsContainer = document.getElementById('power_components_container');
  powerComponentsContainer.innerHTML = (componentsHTML);
}

function updateSolarSystemFeatures(featuresHTML) {
  const solarSystemFeaturesContainer = document.getElementById('solar_system_features_container');
  solarSystemFeaturesContainer.innerHTML = (featuresHTML);
}

function updateProjectBudget(budgetHTML) {
  const projectBudgetContainer = document.getElementById('project_budget_container');
  projectBudgetContainer.innerHTML = (budgetHTML);
}

function updateSolarSystemBudget(budgetHTML) {
  const solarSystemBudgetContainer = document.getElementById('solar_system_budget_container');
  solarSystemBudgetContainer.innerHTML = (budgetHTML);
}

document.querySelector("[data-project-appliance-id='<%= @project_appliance.id %>']").style.display = 'none';
<% unless @project.uses.include? @use %>
  document.querySelector("[data-project-use-id='<%= @use.id %>']").style.display = 'none';
<% end %>
<% if @project.project_appliances.blank? %>
  showNoProjectApplianceMessage("<%= j render 'project_appliances/no_project_appliance' %>");
<% end %>
document.getElementById('appliance-quantity').innerHTML = "<%= @project.appliance_quantity %>";
updateLoadChart("<%= j render 'shared/load_chart', electrical_load: @project, title: 'Daily load profile', day: @project.day_time ? @project.day_time_hour : Appliance::DAY_TIME, night: @project.night_time ? @project.night_time_hour : Appliance::NIGHT_TIME %>");
updateProjectFeatures("<%= j render 'projects/features', project: @project %>");
updateSolarSystemFeatures("<%= j render 'solar_systems/features', solar_system: @solar_system %>");
<% if @solar_system.power_system.present? %>
  updatePowerComponents("<%= j render 'solar_systems/power_components', solar_system: @solar_system %>");
<% else %>
  updatePowerComponents("<%= j render 'solar_systems/no_solar_system_match' %>");
<% end %>
updateProjectBudget("<%= j render 'projects/budget', project: @project %>");
<% if @solar_system.present? %>
  updateSolarSystemBudget("<%= j render 'solar_systems/budget', solar_system: @solar_system %>");
<% end %>

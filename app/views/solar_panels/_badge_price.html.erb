<% if solar_panel.price_max_eur.present? and solar_panel.price_min_eur.present? %>
  <div class="badge px-2 badge-dark">
    <%= "#{solar_panel.price_min_eur.format(no_cents: true, symbol: false, thousands_separator: " ")} -" if solar_panel.price_min_eur != solar_panel.price_max_eur %>
    <%= "#{solar_panel.price_max_eur.format(no_cents: true, symbol: false, thousands_separator: " ")} #{solar_panel.price_max_eur.currency.symbol}" %>
  </div>
<% end %>

<%= simple_form_for(solar_panel) do |f| %>
  <%= f.error_notification %>

  <%= f.input :technology, collection: SolarPanel::TECHNOLOGIES %>

  <div class="row">
    <div class="col-12 col-sm-6">
      <%= f.input :power, label: 'Rated power (Wp)', placeholder: "270" %>
    </div>
    <div class="col-12 col-sm-6">
      <%= f.input :voltage, label: 'Voltage (V)', placeholder: "12" %>
    </div>
  </div>

  <h5 class="mb-3 mt-2">Price</h5>
  <div class="row">
    <div class="col-12 col-sm-6">
      <%= f.input :price, as: :numeric, placeholder: "42,50", label: "Unit price (excl. tax)" %>
    </div>
    <div class="col-12 col-sm-6">
      <%= f.input :currency, as: :select, collection: Money::Currency.all %>
    </div>
  </div>

  <div class="d-flex justify-content-end mt-3">
    <%= link_to "Cancel", power_components_path, class: "btn btn-outline-secondary mr-2" %>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

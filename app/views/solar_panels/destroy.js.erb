function hideSolarPanelCard(solarPanelId) {
  const solarPanelCard = document.querySelector(`[data-solar-panel-id='${solarPanelId}']`);
  solarPanelCard.classList.add("d-none");
  solarPanelCard.classList.remove("d-flex");
}

function showNoSolarPanelMessage(messageHTML) {
  const solarPanelContainer = document.getElementById('solar_panel_container');
  solarPanelContainer.insertAdjacentHTML('beforeend', messageHTML);
}

hideSolarPanelCard("<%= @solar_panel.id %>");
<% if @solar_panels.blank? %>
  showNoSolarPanelMessage("<%= j render 'solar_panels/no_solar_panel' %>");
<% end %>

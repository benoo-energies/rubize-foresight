<% if communication_module.price_max_eur.present? and communication_module.price_min_eur.present? %>
  <div class="badge px-2 badge-dark">
    <%= "#{communication_module.price_min_eur.format(no_cents: true, symbol: false, thousands_separator: " ")} -" if communication_module.price_min_eur != communication_module.price_max_eur %>
    <%= "#{communication_module.price_max_eur.format(no_cents: true, symbol: false, thousands_separator: " ")} #{communication_module.price_max_eur.currency.symbol}" %>
  </div>
<% end %>

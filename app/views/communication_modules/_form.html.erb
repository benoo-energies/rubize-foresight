<%= simple_form_for(communication_module) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-sm-6">
      <%= f.input :daily_consumption,
        placeholder: "42",
        label: "Energy consumption (Wh/d)"
      %>
    </div>
  </div>

  <h5 class="mb-3 mt-2">Price range (excl. tax)</h5>
  <div class="row">
    <div class="col-12 col-sm-4">
      <%= f.input :price_min,
        as: :numeric,
        placeholder: "100",
        label: "Min"
      %>
    </div>
    <div class="col-12 col-sm-4">
      <%= f.input :price_max,
        as: :numeric,
        placeholder: "150",
        label: "Max"
      %>
    </div>
    <div class="col-12 col-sm-4">
      <%= f.input :currency,
        as: :select,
        collection: Money::Currency.all
      %>
    </div>
  </div>

  <div class="d-flex justify-content-end mt-3">
    <%= link_to "Cancel", power_components_path, class: "btn btn-outline-secondary mr-2" %>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

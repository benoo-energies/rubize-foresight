<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <div class="d-flex align-items-center">
    <% if user_signed_in? %>
      <div class="mr-4 d-none d-sm-block">
        <%= current_user.name %>
      </div>
      <% if current_user.admin %>
        <%= link_to "Admin", admin_users_path, class: "btn btn-primary mr-3" %>
      <% end %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-outline-secondary" %>
    <% else %>
      <%= link_to "Log in", new_user_session_path, class: "btn btn-primary mr-3" %>
    <% end %>
  </div>

</div>
